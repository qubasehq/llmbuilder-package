# Include the README and docs
include README.md
include NON_TECH_README.md
include MIGRATION.md
include LICENSE*

# Include configuration files
recursive-include llmbuilder/config *.json *.yaml *.yml

# Include templates and examples
recursive-include llmbuilder/templates *
recursive-include examples *

# Include test files (optional)
recursive-include tests *.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude __pycache__

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude pytest.ini