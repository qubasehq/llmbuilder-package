{
  "model": {
    "vocab_size": 32000,
    "embedding_dim": 768,
    "num_layers": 12,
    "num_heads": 12,
    "max_seq_length": 2048,
    "dropout": 0.1
  },
  "tokenizer": {
    "vocab_size": 32000,
    "model_type": "bpe",
    "character_coverage": 0.9995
  },
  "training": {
    "batch_size": 16,
    "learning_rate": 3e-4,
    "num_epochs": 20,
    "weight_decay": 0.01,
    "gradient_clip_norm": 1.0,
    "warmup_steps": 2000
  },
  "data": {
    "max_length": 2048,
    "min_length": 50,
    "clean_text": true,
    "validation_split": 0.1,
    "test_split": 0.05,
    "ingestion": {
      "supported_formats": ["html", "markdown", "epub", "pdf", "txt"],
      "batch_size": 200,
      "num_workers": 8,
      "output_format": "jsonl",
      "preserve_structure": true,
      "extract_metadata": true,
      "enable_ocr": true,
      "ocr_quality_threshold": 0.7,
      "ocr_language": "eng",
      "pdf_extraction_method": "auto",
      "html_parser": "lxml",
      "remove_scripts": true,
      "remove_styles": true,
      "extract_toc": true,
      "chapter_separator": "\n\n---\n\n"
    },
    "deduplication": {
      "enable_exact_deduplication": true,
      "enable_semantic_deduplication": true,
      "similarity_threshold": 0.9,
      "embedding_model": "all-MiniLM-L6-v2",
      "batch_size": 2000,
      "chunk_size": 1024,
      "min_text_length": 100,
      "normalize_text": true,
      "use_gpu_for_embeddings": true,
      "embedding_cache_size": 20000,
      "similarity_metric": "cosine"
    }
  },
  "tokenizer_training": {
    "vocab_size": 32000,
    "algorithm": "sentencepiece",
    "min_frequency": 3,
    "special_tokens": ["<pad>", "<unk>", "<s>", "</s>", "<mask>"],
    "character_coverage": 0.9998,
    "max_sentence_length": 8192,
    "shuffle_input_sentence": true,
    "normalization_rule_name": "nmt_nfkc_cf",
    "remove_extra_whitespaces": true,
    "add_dummy_prefix": true,
    "num_threads": 8,
    "max_training_time": 7200,
    "validation_split": 0.05
  },
  "gguf_conversion": {
    "quantization_level": "Q4_0",
    "validate_output": true,
    "conversion_timeout": 7200,
    "preferred_script": "llama_cpp",
    "output_naming": "quantization_suffix",
    "preserve_metadata": true
  },
  "inference": {
    "max_new_tokens": 512,
    "temperature": 0.8,
    "top_k": 50,
    "top_p": 0.9,
    "repetition_penalty": 1.1
  },
  "system": {
    "device": "cuda",
    "mixed_precision": true,
    "compile_model": true,
    "num_workers": 8,
    "pin_memory": true
  },
  "paths": {
    "data_dir": "data",
    "model_dir": "models",
    "checkpoint_dir": "checkpoints",
    "tokenizer_dir": "tokenizers",
    "output_dir": "output",
    "log_dir": "logs",
    "cache_dir": "cache"
  }
}
