{
  "model": {
    "vocab_size": 50000,
    "embedding_dim": 1024,
    "num_layers": 24,
    "num_heads": 16,
    "max_seq_length": 4096,
    "dropout": 0.1,
    "layer_norm_eps": 1e-5,
    "use_bias": true,
    "activation": "gelu"
  },
  "tokenizer": {
    "vocab_size": 50000,
    "model_type": "bpe",
    "character_coverage": 0.9998
  },
  "training": {
    "batch_size": 4,
    "learning_rate": 1e-4,
    "num_epochs": 50,
    "weight_decay": 0.01,
    "gradient_clip_norm": 0.5,
    "warmup_steps": 5000,
    "save_every": 2000,
    "eval_every": 1000,
    "log_every": 50
  },
  "data": {
    "max_length": 4096,
    "min_length": 100,
    "clean_text": true,
    "validation_split": 0.05,
    "test_split": 0.02,
    "ingestion": {
      "supported_formats": ["html", "markdown", "epub", "pdf", "txt"],
      "batch_size": 500,
      "num_workers": 16,
      "output_format": "jsonl",
      "preserve_structure": true,
      "extract_metadata": true,
      "enable_ocr": true,
      "ocr_quality_threshold": 0.8,
      "ocr_language": "eng",
      "pdf_extraction_method": "auto",
      "html_parser": "lxml",
      "remove_scripts": true,
      "remove_styles": true,
      "extract_toc": true,
      "chapter_separator": "\n\n---\n\n"
    },
    "deduplication": {
      "enable_exact_deduplication": true,
      "enable_semantic_deduplication": true,
      "similarity_threshold": 0.92,
      "embedding_model": "all-MiniLM-L6-v2",
      "batch_size": 5000,
      "chunk_size": 2048,
      "min_text_length": 200,
      "normalize_text": true,
      "use_gpu_for_embeddings": true,
      "embedding_cache_size": 50000,
      "similarity_metric": "cosine"
    }
  },
  "tokenizer_training": {
    "vocab_size": 50000,
    "algorithm": "sentencepiece",
    "min_frequency": 5,
    "special_tokens": ["<pad>", "<unk>", "<s>", "</s>", "<mask>", "<cls>", "<sep>"],
    "character_coverage": 0.9998,
    "max_sentence_length": 16384,
    "shuffle_input_sentence": true,
    "normalization_rule_name": "nmt_nfkc_cf",
    "remove_extra_whitespaces": true,
    "add_dummy_prefix": true,
    "num_threads": 16,
    "max_training_time": 14400,
    "validation_split": 0.02
  },
  "gguf_conversion": {
    "quantization_level": "Q5_0",
    "validate_output": true,
    "conversion_timeout": 14400,
    "preferred_script": "llama_cpp",
    "output_naming": "quantization_suffix",
    "preserve_metadata": true
  },
  "inference": {
    "max_new_tokens": 1024,
    "temperature": 0.8,
    "top_k": 50,
    "top_p": 0.9,
    "repetition_penalty": 1.05,
    "do_sample": true,
    "num_beams": 1
  },
  "system": {
    "device": "cuda",
    "mixed_precision": true,
    "compile_model": true,
    "num_workers": 16,
    "pin_memory": true,
    "persistent_workers": true
  },
  "paths": {
    "data_dir": "data",
    "model_dir": "models",
    "checkpoint_dir": "checkpoints",
    "tokenizer_dir": "tokenizers",
    "output_dir": "output",
    "log_dir": "logs",
    "cache_dir": "cache"
  }
}
