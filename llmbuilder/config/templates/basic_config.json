{
  "model": {
    "vocab_size": 16000,
    "embedding_dim": 512,
    "num_layers": 8,
    "num_heads": 8,
    "max_seq_length": 1024,
    "dropout": 0.1
  },
  "tokenizer": {
    "vocab_size": 16000,
    "model_type": "bpe",
    "character_coverage": 0.9995
  },
  "training": {
    "batch_size": 32,
    "learning_rate": 3e-4,
    "num_epochs": 10,
    "weight_decay": 0.01,
    "gradient_clip_norm": 1.0
  },
  "data": {
    "max_length": 1024,
    "min_length": 10,
    "clean_text": true,
    "validation_split": 0.1,
    "test_split": 0.1,
    "ingestion": {
      "supported_formats": [
        "html",
        "markdown",
        "epub",
        "pdf",
        "txt"
      ],
      "batch_size": 100,
      "num_workers": 4,
      "enable_ocr": true,
      "ocr_quality_threshold": 0.5
    },
    "deduplication": {
      "enable_exact_deduplication": true,
      "enable_semantic_deduplication": true,
      "similarity_threshold": 0.85,
      "embedding_model": "all-MiniLM-L6-v2",
      "batch_size": 1000
    }
  },
  "tokenizer_training": {
    "vocab_size": 16000,
    "algorithm": "bpe",
    "min_frequency": 2,
    "special_tokens": [
      "<pad>",
      "<unk>",
      "<s>",
      "</s>"
    ],
    "character_coverage": 0.9995
  },
  "gguf_conversion": {
    "quantization_level": "Q8_0",
    "validate_output": true,
    "preferred_script": "auto"
  },
  "system": {
    "device": "auto",
    "mixed_precision": false,
    "num_workers": 4
  },
  "paths": {
    "data_dir": "data",
    "model_dir": "models",
    "checkpoint_dir": "checkpoints",
    "tokenizer_dir": "tokenizers",
    "output_dir": "output"
  }
}
